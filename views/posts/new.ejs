<h1>Create a new Post</h1>

<form action="/posts" method="POST" role="form">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" placeholder="Headline goes here" name="title">
  </div>
  <div class="form-group">
    <label for="body">Body</label>
    <textarea class="form-control" id="body" placeholder="Content goes here" name="body"></textarea>
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    <input type="text" class="form-control" id="author" placeholder="Your name" name="author">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>